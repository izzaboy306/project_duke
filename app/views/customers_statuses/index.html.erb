<h1>Customers Statuses</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers_statuses.each do |customers_status| %>
      <tr>
        <td><%= link_to 'Show', customers_status %></td>
        <td><%= link_to 'Edit', edit_customers_status_path(customers_status) %></td>
        <td><%= link_to 'Destroy', customers_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

