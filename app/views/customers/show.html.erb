<div class="block-callout container-fluid">
	<div class="row">
	  <div class="col-md-10">
	 		<h2>Customer Detailed Information</h2>
	  </div>
	  <div class="col-md-2">
	  	<%= link_to 'Back', customers_path, class: 'btn btn-danger escape-button' %>
		</div>
	</div>
	<div class="horizontal-line">&nbsp;</div>
	<h6 class="sub-block-callout">View a clients detailed information here.</h6>
</div>
<div class="container-fluid">
	<div class="row">
		<!-- Customer Projects Panel -->
    <div class="col-md-5">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Customer Information</h3>
        </div>
        <div class="panel-body">
          <div class="col-md-6">
				  	<p class="company-info-header"><%= @customer.company_name %></p>
				  	<p>
				  		<%= @customer.address_line_one %><br>
							<%= @customer.address_line_two %><br>
							<%= @customer.city + ', Insert State' %><br>
							<%= @customer.zip_code %>
						</p>
				  </div>
				  <div class="col-md-4 col-md-offset-2">
				  	<p class="company-info-header">Contact Info</p>
				  	<p>
				  		<%= @customer.phone_number %><br>
							<%= @customer.email_address %>
						</p>
				  </div>
        </div>
      </div>
    </div>
		<!-- Customer Projects Panel -->
    <div class="col-md-7">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Projects</h3>
        </div>
        <div class="panel-body">
          <table>
					  <thead>
					    <tr>
					      <th>Project Name</th>
					      <th>Start Date</th>
					      <th>End Date</th>
					      <th>Type</th>
					      <th>Total Cost</th>
					    </tr>
					  </thead>
