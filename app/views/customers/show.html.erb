				        <td>$50,000</td>
				      </tr>
				      <tr>
				        <td>Arrowmont Constructors</td>
				        <td>01/01/2016</td>
				        <td>02/01/2016</td>
				        <td>Commercial</td>
				        <td>$50,000</td>
				      </tr>
					  </tbody>
					</table>
        </div>
      </div>
    </div>
  </div>
  <!-- Second Row -->
  <div class="row">
  	<!-- Customer Quick Reports Panel -->
    <div class="col-md-5">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Quick Reports</h3>
        </div>
        <div class="panel-body">
        	<ul class="reports-list">
        		<li>Report One</li>
        		<li>Report Two</li>
        		<li>Report Three</li>
        		<li>Report Four</li>
        		<li>Report Five</li>
          </ul>
        </div>
      </div>
    </div>
		<!-- Customer Invoices Panel -->
    <div class="col-md-7">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Invoices</h3>
        </div>
        <div class="panel-body">
          <table>
					  <thead>
					    <tr>
					    	<th>Invoice #</th>
					      <th>Project Name</th>
					      <th>Billed Date</th>
					      <th>Due Date</th>
					      <th>Type</th>
					      <th>Total Due</th>
					    </tr>
					  </thead>
					  <tbody>
