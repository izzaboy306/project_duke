<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td class="customer-name"><%= link_to customer.company_name, customer, remote: true %></td>
        <td class="customer-name"><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td class="customer-name"><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, class: 'btn btn-success' %>