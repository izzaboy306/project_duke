<%= form_for(customer) do |f| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :company_name %>
    <%= f.text_field :company_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= :customers_statuses %>
    <%= f.collection_select :customers_statuses_id, CustomersStatus.all, :id, :title, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :email_address %>
    <%= f.text_field :email_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address_line_one %>
    <%= f.text_field :address_line_one, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address_line_two %>
    <%= f.text_field :address_line_two, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :customer_notes %>
    <%= f.text_area :customer_notes, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>
